#!/bin/bash

# DO NOT EDIT THIS FILE
# any changes will be lost on board support package update

THIS_SCRIPT="raspbian-config"
MOTD_DISABLE=""

[[ -f /etc/default/raspbian-motd ]] && . /etc/default/raspbian-motd

for f in $MOTD_DISABLE; do
	[[ $f == $THIS_SCRIPT ]] && exit 0
done

if [[ $(( $RANDOM % 2 )) == 0 ]]; then
	if [[ -f /usr/bin/raspi-config ]]; then
		echo -e "[\e[31m General system configuration (beta)\e[0m: \e[1mraspi-config\e[0m ]\n"
	else
		echo -e "[\e[31m Menu-driven system configuration (beta)\e[0m: \e[1msudo apt update && sudo apt install raspi-config\e[0m ]\n"
	fi
fi

exit 0

